<div class="container">
  <h2 class="text-center text-xl text-sm-md text-bold py-4 text-primary">Added Course for Exemption</h2>
  <table class="responsive nowrap table table-hover" id="dttb-exemptions" data-sort="true" data-source="<%= url_for(format: :json)%>">
    <thead>
      <tr>
        <th data-data="course_title">Course Title</th>
        <th data-data="letter_grade">Letter Grade</th>
        <th data-data="course_code">Course Code</th>
        <th data-data="credit_hour">Credit Hour</th>
        <th data-data="department_approval">Department Approval</th>
        <th data-data="dean_approval">Dean Approval</th>
        <th data-data="registeral_approval">Registeral Approval</th>
        <th data-action="registeral_approval">Action</th>
        <th data-data="url" data-orderable="false" data-class-name="all" data-searchable="false" class="skip-export" width="100px"></th>
      </tr>
    </thead>
    <tbody>
      <% @exemption.each do |exemption|%>
        <%= render "exemption", exemption: exemption%>
      <%end%>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Exemption', new_exemptions_path(@applicant), class: 'btn btn-primary' %>
</div>
