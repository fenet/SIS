<h1>Make Payment for Makeup Exam</h1>

<%= simple_form_for(@payment) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :total_fee, input_html: { readonly: true }, label: "Makeup Exam Fee" %>
    <%= f.input :student_nationality, as: :hidden %>
    <%= f.input :program_id, as: :hidden %>
    <%= f.input :registration_fee, as: :hidden %>
    <%= f.input :late_registration_fee, as: :hidden %>
    <%= f.input :starting_penalty_fee, as: :hidden %>
    <%= f.input :daily_penalty_fee, as: :hidden %>
    <%= f.input :makeup_exam_fee, as: :hidden %>
    <%= f.input :add_drop, as: :hidden %>
    <%= f.input :tution_per_credit_hr, as: :hidden %>
    <%= f.input :readmission, as: :hidden %>
    <%= f.input :reissuance_of_grade_report, as: :hidden %>
    <%= f.input :student_copy, as: :hidden %>
    <%= f.input :additional_student_copy, as: :hidden %>
    <%= f.input :tempo, as: :hidden %>
    <%= f.input :original_certificate, as: :hidden %>
    <%= f.input :original_certificate_replacement, as: :hidden %>
    <%= f.input :tempo_replacement, as: :hidden %>
    <%= f.input :letter, as: :hidden %>
    <%= f.input :student_id_card, as: :hidden %>
    <%= f.input :student_id_card_replacement, as: :hidden %>
    <%= f.input :name_change, as: :hidden %>
    <%= f.input :transfer_fee, as: :hidden %>
    <%= f.input :other, as: :hidden %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success' %>
  </div>
<% end %>
